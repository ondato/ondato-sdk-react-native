    // CORE STYLING
    "brand": {
        "colors": {
            "primaryColor": String, // Primary brand color - used in illustration and primary button | Default: "#4968FC"
            "textColor": String, // Text color for content | Default: "#000000"
            "backgroundColor": String, // Base background color for screens | Default: "#FFFFFF"
            
            "danger": String, // Color for error states and messages | Default: "#D04555"
            "warning": String, // Color for warning elements | Default: "#F9BB42"
            "success": String, // Color for success elements | Default: "#28865A"
            
            "grey-200": String, // Button Disabled state background, Text input readonly background | Default: "#F2F5F8"
            "grey-400": String, // Used for input element border color, also used in Text input | Default: "#BEC6D0"
            "grey-500": String, // Used for `selectionCard` icon, Proof of Adress upload element border, Text input disabled state text color | Default: "#96A0AE"
            "grey-600": String, // Used for Proof of Adress icon color, Text input Active state border | Default: "#6D7580"
            "grey-700": String, // Used for feedback bar background color | Default: "#282B2F"
            
            //Android specific
            "statusBarColor": String, // Default: brand.colors.primaryColor
            "alertDialogPositiveTextColor": String, // Default:  brand.colors.primaryColor
            "alertDialogNegativeTextColor": String // Default: brand.colors.danger
        },
        "baseComponentStyling": {
            "cornerRadius": Float, //Used for all input components (Buttons, Text inputs and other elements) | Default: 6
            "buttonPadding": { //Used for Primary and Secondary button paddings
                "top": Float, // Default: 14
                "bottom": Float, // Default: 14
                "left": Float, // Default: 24
                "right": Float // Default: 24
            },
            "borderWidth": Float //Used for Secondary button, Text input, Selection button border | Default: 1.0
        },
        //note for iOS: if custom font is provided via `Ondato.sdk.configuration.resources.fonts` fontSize and fontWeight will be overriden by that custom font
        "typography": {
            "heading1": {
                "fontSize": Int, // Default: 24
                "fontWeight": Int, // Default: 500
                "lineHeight": Int, // Default: 32
                "alignment": String, // Default: center
                "color": String // Default colors.textColor
            },
            "heading2": {
                "fontSize": Int, // Default: 16
                "fontWeight": Int, // Default: 500
                "lineHeight": Int, // Default: 18
                "alignment": String, // Default: center
                "color": String // Default colors.textColor
            },
            "body": {
                "fontSize": Int, // Default: 16
                "fontWeight": Int, // Default: 400
                "lineHeight": Int, // Default: 18
                "alignment": String, // Default: center
                "color": String // Default colors.textColor
            },
            "list": {
                "fontSize": Int, // Default: 16
                "fontWeight": Int, // Default: 400
                "lineHeight": Int, // Default: 18
                "color": String // Default colors.textColor
            },
            "inputLabel": {
                "fontSize": Int, // Default: 16
                "fontWeight": Int, // Default: 400
                "lineHeight": In,t // Default: 18
                "color": String // Default colors.textColor
            },
            "button": {
                "fontSize": Int, // Default: 16
                "fontWeight": Int, // Default: 500
                "lineHeight": Int, // Default: 18
                "color": String // Default colors.textColor
            }
        }
    },
    
